
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
    <script type="text/javascript" src=" https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js" defer></script>
    <script src="~/Assets/assets/js/script.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
</head>
<input type="hidden" id="url_local" value="@System.Configuration.ConfigurationManager.AppSettings["url_local"]" />
<body>
    <div class="loader" style="display: none;"></div>
    <div class="main main-app p-3 p-lg-4">
        <h4>Warehouse</h4>


        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom d-flex justify-content-between">
                        @*<h2>Hoverable Data Table</h2>*@
                        <button type="submit" id="btnadd" class="btn btn-primary" style="margin-right: 5px; float:right" data-toggle="modal" data-target="#modal-lg">
                            <i class="fa fa-plus"></i> Add
                        </button>
                        @*<a href="https://datatables.net/examples/styling/hover.html" target="_blank" class="btn btn-outline-primary btn-sm text-uppercase">
                                <i class=" mdi mdi-link mr-1"></i> Docs
                            </a>*@
                    </div>
                    <div class="card-body">
                        <div style="color:black" class="table-responsive hoverable-data-table">
                            <table id="tblWarehouse" class="table table-hover nowrap table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        @*<th>Scale ID</th>*@
                                        <th style='display:none'>GUID</th>
                                        <th>Code</th>
                                        <th>English Name</th>
                                        <th>Warehouse Type</th>
                                        @*<th style="display:none">LocId</th>*@

                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        @*modelpopup*@
        <div class="modal fade" id="modal-lg" tabindex="-1" role="dialog" aria-labelledby="exampleModalLarge" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header header">
                        <button type="button" id="cls" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h2 class="modal-title" id="exampleModalLarge2" style="color:white">Scale</h2>

                    </div>
                    <div class="modal-body">

                        <div class="row">

                            <div class="col-sm-6" style="display: none">
                                <label>GUID</label>
                                <input style="max-width: 400px;" type="hidden" id="warehouseGUID" class="form-control" />
                            </div>

                            <div class="col-sm-6 ">
                                <label>Warehouse Type</label>
                                <select style="max-width: 400px;" value="" id="waretype" class="form-control">
                                </select>
                            </div>


                            <div class="col-sm-6 ">
                                <label>Code</label>
                                <input class="form-control" placeholder="Please Insert Code" type="text" maxlength="100" id="code" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label>En Name</label>
                                <input class="form-control" type="text" maxlength="15" placeholder="Please Insert Eng Name" id="engName" />
                            </div>

                            <div class="col-sm-6">
                                <label>Ar Name</label>
                                <input class="form-control" type="text" maxlength="15" placeholder="Please Insert Ar Name" id="arName" />
                                @* <input type="button" style="display:none" title="sadasd" id="btnref" />*@
                                @*<input type="text" id="example" placeholder="Select">*@


                                @*<input type="button" style="display:none" title="sadasd" id="btnref" />*@
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Main Warehouse</label>
                                <select style="max-width: 400px;" id="mainWarehouseddl" class="form-control">
                                </select>
                            </div>

                            <div class="col-sm-6">
                                <label>Default Currency</label>
                                <select style="max-width: 400px;" class="form-control" id="currencyddl">
                                    <option value="0">Select Currency</option>
                                    <option value="1">SR</option>
                                    <option value="2">Pakistani Rupees</option>
                                </select>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Return Warehouse</label>
                                <select style="max-width: 400px;" id="returnWarehouseddl" class="form-control">
                                    
                                </select>
                            </div>
                            <div class="col-sm-6">
                                <label>Notes</label>
                                <input class="form-control" style="max-width: 400px;" type="text" id="notes" />
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-sm-4">
                                <label>Keeper</label>
                                <input class="form-control" placeholder="" type="text" maxlength="20" id="keeper" />
                            </div>
                            <div class="col-sm-4">
                                <label>Phone</label>
                                <input class="form-control" placeholder="" type="text" maxlength="100" id="phone" />
                            </div>

                            <div class="col-sm-4">
                                <label>Phone1</label>
                                <input class="form-control" placeholder="" type="text" maxlength="20" id="phone1" />
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-sm-0" style="display: none;">

                                <input class="form-control" placeholder="" type="text" id="barcode" style="cursor: not-allowed" disabled />
                            </div>
                            <div class="col-sm-4">
                                <label>Fax</label>
                                <input class="form-control" placeholder="" type="text" maxlength="20" id="fax" />
                            </div>

                            <div class="col-sm-4">
                                <label>PO Box</label>
                                <input class="form-control" placeholder="" type="text" maxlength="100" id="poBox" />
                            </div>

                            <div class="col-sm-4">
                                <label>Country</label>
                                <input class="form-control" placeholder="" type="text" maxlength="20" id="country" />
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-sm-4">
                                <label>City</label>
                                <input class="form-control" placeholder="" type="text" maxlength="100" id="city" />
                            </div>
                            <div class="col-sm-4">
                                <label>Email</label>
                                <input class="form-control" placeholder="" type="text" maxlength="20" id="email" />
                            </div>

                            <div class="col-sm-4">
                                <label>Website</label>
                                <input class="form-control" placeholder="" type="text" maxlength="100" id="website" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label>Address</label>
                                <input class="form-control" placeholder="" type="text" maxlength="20" id="address" />
                            </div>
                        </div>

                        @*<input type="checkbox" id="active">
                            <label for="active"> Active</label><br>*@
                    </div>

                    <div class="modal-footer">
                        <button type="button" id="btnclose" class="btn btn-danger btn-pill" data-dismiss="modal">Close</button>
                        <button type="button" id="btnsave" title="Save" class="btn btn-primary btn-pill">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../Assets/assets/contents/js/Warehouse.js"></script>
    <script src="../Assets/assets/contents/js/GenericAjax.js"></script>
    <script src="../Assets/assets/contents/js/sweetalert.min.js"></script>
</body>
